#include <iostream>
using namespace std;
int n;
int *s= new int[n]; //initialising a new array operator of size n
float avg()
{
    float sum=0;
    for(int i=0;i<n;i++)
    {
        sum += s[i]; //calculating sum
    }
    float average;
    average=sum/n;
    return average;
}
int main()
{
    cout<<"Enter number of students ";
    cin>>n;
    cout<<"Enter marks of students "<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>s[i]; //taking in marks input in new array
    }
    cout<<"Average is "<<avg();
    delete[] s; //deleting new array memory from heap memory
}
