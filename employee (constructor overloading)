#include<iostream>
#include<string.h>
using namespace std;
class Employee
{
    public:
    string d,name;
    int Id;
    float salary,gross,DA,HRA,TA;
    //Constructor overloading
    //Parametrized constructors
    Employee(string dept,string n,int i)
    {
        d=dept;
        name=n;
        Id=i;
    }
    //Constructor with different number of arguments
    Employee(float s,float da,float hra,float ta,float gs)
    {
        salary=s;
        DA=da;
        HRA=hra;
        TA=ta;
        gross=gs;
    }
    ~Employee() //Destructor
    {
        cout<<"Destructor implemented"<<endl;
    }
    void calc()
    {
        DA=0.5*salary;
        HRA=0.3*salary;
        TA=0.1*salary;
        gross=salary+DA+HRA+TA;
    }
    void display()
    {
        cout<<"Details of the employee are: "<<endl;
        cout<<"Department: "<<d<<endl;
        cout<<"Name: "<<name<<endl;
        cout<<"ID Number: "<<Id<<endl;
    }
    void disp()
    {
        cout<<"Salary: "<<salary<<endl; 
        cout<<"DA: "<<DA<<endl;
        cout<<"HRA: "<<HRA<<endl;
        cout<<"TA: "<<TA<<endl;
        cout<<"Gross salary: "<<gross<<endl;
    }
};
int main()
{
    Employee e("Engineering","Sam",8723);
    e.display();
    Employee e1(50000,0,0,0,0);
    e1.calc();
    e1.disp();
}
